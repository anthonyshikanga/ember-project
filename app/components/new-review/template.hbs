{{#if addNewReview}}
<h1>Review movie</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Enter your reviews here</label>
        {{input value=content id="content"}}
      </div>
      <button type="button" class="btn btn-success"{{action 'saveReview'}}>Review</button>
      <button type="button" class="btn btn-danger"{{action 'cancelReviewForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-primary"{{action 'reviewFormShow'}}>Review movie</button>
{{/if}}
{{yield}}
